<%= render 'layouts/error_messages' %>
<main class="main">
  <div class="inner">
    <% if user_signed_in? %>
      <div class="greeting">こんにちは、
        <%= link_to "#{current_user.name}さん", edit_user_registration_path, class: :greeting__link%>
      </div>
    <% end %>
    <div class="card__wrapper">
      <%= render partial: "item", collection: @items %>
    </div>
  </div>

  <%= link_to(new_item_path, class: 'purchase-btn') do %>
  <span class='purchase-btn-text'>投稿する</span>
  <%= image_tag 'button_pc.png' , size: '70x70' ,class: "purchase-btn-icon" %>
<% end %>
</main>